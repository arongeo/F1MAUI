<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobilProj.View.ConstructorStandingsPage"
             xmlns:vm="clr-namespace:MobilProj.ViewModel"
             xmlns:mc="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             Title="Constructors' Standings">
    <Grid RowDefinitions="*, 9*">
        <Grid Grid.Row="0" Padding="5" ColumnDefinitions="*, *">
            <Button Margin="5" Text="Refresh" Clicked="Refresh_Clicked" Grid.Column="0" />
            <Button Margin="5" Text="Share" Clicked="Share_Clicked" Grid.Column="1" />
        </Grid>

        <CollectionView ItemsSource="{Binding ConstructorStandings}" Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5" Padding="10" ColumnDefinitions="*, *, *, *" BackgroundColor="DarkGray">
                        <Label Text="{Binding Position}" Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Start" Margin="15" FontSize="Small" />
                        <Label Text="{Binding Constructor.Name}" Grid.Column="1" VerticalTextAlignment="Center" FontSize="Medium" />
                        <Label Text="{Binding Points}" Grid.Column="3" VerticalOptions="Center" HorizontalOptions="Center" FontSize="Small" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.Footer>
                <VerticalStackLayout>
                    <mc:ChartView Chart="{Binding Chart}" HeightRequest="500" />
                </VerticalStackLayout>
            </CollectionView.Footer>
        </CollectionView>
    </Grid>
</ContentPage>