<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobilProj.View.RacesPage"
             Title="Races">
    <Grid RowDefinitions="*, 9*">
        <Grid Grid.Row="0" Padding="5" ColumnDefinitions="*, *">
            <Button Margin="5" Text="Refresh" Clicked="Refresh_Clicked" Grid.Column="0" />
            <Button Margin="5" Text="Share" Clicked="Share_Clicked" Grid.Column="1" />
        </Grid>

        <CollectionView ItemsSource="{Binding Races}" Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5" Padding="10" ColumnDefinitions="*, *, *, *" BackgroundColor="DarkGray">
                        <Label Text="{Binding Round}" Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Start" Margin="15" FontSize="Small" />
                        <Label Text="{Binding Name}" Grid.Column="1" VerticalTextAlignment="Center" FontSize="Medium" />
                        <Label Text="{Binding Date}" Grid.Column="3" VerticalOptions="Center" HorizontalOptions="Center" FontSize="Small" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>